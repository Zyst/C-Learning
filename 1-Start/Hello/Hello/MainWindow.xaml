<Window x:Class="Hello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hello"
        mc:Ignorable="d"
        Title="Hello" Height="297" Width="540" MinWidth="540" MinHeight="400">
    <Grid>
        <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="Please enter your name" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="26.667" FontWeight="Bold" Margin="0,25,0,0"/>
        <TextBox x:Name="userName" Margin="112,79,112,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="49" FontSize="21.333" MinWidth="293" MinHeight="49"/>
        <Button x:Name="submit" Content="Submit" Margin="112,135,112,144" FontWeight="Bold" FontSize="26.667" Foreground="White" Click="submitClick" MinWidth="293" MinHeight="40" MaxHeight="40">
            <Button.Background>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.HighlightColorKey}}"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
